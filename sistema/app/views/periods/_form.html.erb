      <h2><%= pluralize(period.errors.count, "error") %> prohibited this period from being saved:</h2>

      <ul>
      <% period.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <strong>Periodo</strong>
            <small>Formulario</small>
        </div>
        <div class="card-block">            
            <div class="form-group">
                <label>Periodo*</label>
                <%= f.text_field :periodo, class: "form-control", placeholder: "Periodo" %>
            </div>
            <div class="card-footer">
                <%= f.submit 'Guardar', class: "btn btn-sm btn-primary" %>
                <%= link_to 'Cancelar', periods_path, class: "btn btn-sm btn-danger" %>
            </div>
        </div>
    </div>
</div>
<% end %>
