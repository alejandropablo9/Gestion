<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <strong>Datos del Alumno</strong>
            <small>Formulario</small>
        </div>
        <div class="card-block">
            <div class="form-group">
                <label>Matricula*</label>
                <%= f.text_field :matricula, class: "form-control", placeholder: "Matricula" %>
            </div>
            <div class="form-group">
                <label>Nombre(s)*</label>
                <%= f.text_field :nombre, class: "form-control", placeholder: "Nombre" %>
            </div>
            <div class="form-group">
                <label>Apellido Paterno*</label>
                <%= f.text_field :apellido_paterno, class: "form-control", placeholder: "Apellido Paterno" %>
            </div>
            <div class="form-group">
                <label>Apellido Materno</label>
                <%= f.text_field :apellido_materno, class: "form-control", placeholder: "Apellido Materno" %>
            </div>
            <!--/row-->
        </div>
    </div>
</div>

<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <strong>Datos del tutor</strong>
            <small>Formulario</small>
        </div>
        <div class="card-block">
            <div class="form-group">
                <label>Nombre completo*</label>
                <%= f.text_field :nombre_del_tutor, class: "form-control", placeholder: "Nombre Completo" %>
            </div>
            <div class="form-group">
                <label>Direcci√≥n*</label>
                <%= f.text_field :direccion, class: "form-control", placeholder: "Direccion" %>
            </div>
            <div class="form-group">
                <label>Telefono*</label>
                <%= f.text_field :telefono, class: "form-control", placeholder: "Telefono" %>
            </div>
            <div class="card-footer">
                <%= f.submit 'Guardar', class: "btn btn-sm btn-primary" %>
                <%= link_to 'Cancelar', students_path, class: "btn btn-sm btn-danger" %>
            </div>
        </div>
    </div>
</div>
