<div class="container-fluid">
     <div class="animated fadeIn">
         <div class="row">
            <p id="notice"><%= notice %></p>
            <div class="col-sm-8 col-md-6">
                <div class="card card-inverse card-primary text-xs-center">
                    <div class="card-header">
                        Alumno
                    </div>
                    <div class="card-blockquote">
                        <p>
                            <strong>Matricula:</strong>
                            <%= @student.matricula %>
                        </p>
                        <p>
                            <strong>Nombre:</strong>
                            <%= @student.nombre %>
                        </p>

                        <p>
                            <strong>Apellido paterno:</strong>
                            <%= @student.apellido_paterno %>
                        </p>

                        <p>
                            <strong>Apellido materno:</strong>
                            <%= @student.apellido_materno %>
                        </p>

                        <p>
                            <strong>Nombre del tutor:</strong>
                            <%= @student.nombre_del_tutor %>
                        </p>

                        <p>
                            <strong>Direccion:</strong>
                            <%= @student.direccion %>
                        </p>

                        <p>
                            <strong>Telefono:</strong>
                            <%= @student.telefono %>
                        </p>
                    </div>
                </div>
            </div>            
         </div>   
         <div class="row">
            <%= link_to 'Editar', edit_student_path(@student), class: "btn btn-sm btn-primary" %>
            <%= link_to 'Cancelar', students_path, class: "btn btn-sm btn-danger" %>
         </div>
    </div>
</div>


