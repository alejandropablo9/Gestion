<%= form_for(group) do |f| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <strong>Grupo</strong>
            <small>Formulario</small>
        </div>
        <div class="card-block">
            <div class="form-group">
                <label>Grupo*</label>
                <%= f.text_field :grupo, class: "form-control", placeholder: "Grupo" %>
            </div>
            <div class="form-group">
                <label>Periodo</label>
                <%= f.collection_select :period_id, Period.all, :id, :periodo, {prompt: "Selecciona un Periodo"}, {class: "form-control"} %> 
            </div>
            <div class="form-group">
                <label>Grado</label>
                <%= f.collection_select :grade_id, Grade.all, :id, :grado, {prompt: "Selecciona un Grado"}, {class: "form-control"} %>
            </div>
            <div class="card-footer">
                <%= f.submit 'Guardar', class: "btn btn-sm btn-primary" %>
                <%= link_to 'Cancelar', groups_path, class: "btn btn-sm btn-danger" %>
            </div>
        </div>
    </div>
</div>
<% end %>


