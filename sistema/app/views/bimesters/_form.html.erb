<%= form_for(bimester) do |f| %>
  <% if bimester.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bimester.errors.count, "error") %> prohibited this bimester from being saved:</h2>

      <ul>
      <% bimester.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-sm-6">
      <div class="card">
          <div class="card-header">
            <strong>Bimestre</strong>
            <small>Formulario</small>
   </div>
   <div class="card-block">
       <div class="form-group">
         <label>Bimestre*</label>
         <%= f.text_field :bimestre, class: "form-control", placeholder: "Bimestre" %>
     </div>

     <div class="form-group">
       <label>Periodo</label>
      <%= f.collection_select :period_id, Period.all, :id, :periodo, {prompt: "Selecciona un Periodo"}, {class: "form-control"} %>
  </div>

  <div class="card-footer">
    <%= f.submit 'Guardar', class: "btn btn-sm btn-primary" %>
    <%= link_to 'Cancelar', bimesters_path, class: "btn btn-sm btn-danger" %>
  </div>
<% end %>