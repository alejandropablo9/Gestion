<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <p id="notice"><%= notice %></p>
            <div class="col-lg-12">
              <h1>Bimestre</h1>
                <div class="card">
                  <div class="card-block">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th>Bimestre</th>
                                    <th>Periodo</th>
                                    <th colspan="3">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @bimesters.each do |bimester| %>
                                <tr>
                                    <td><%= bimester.bimestre %></td>
                                    <td><%= bimester.period %></td>
                                    <td><%= link_to bimester do %>
                                            <button class="btn btn-success"><i class=" fa fa-check"></i></button>
                                        <% end %>
                                    </td>
                                    <td><%= link_to edit_bimester_path(bimester) do  %>
                                            <button class="btn btn-primary"><i class="fa fa-pencil"></i></button>
                                        <% end %>
                                    </td>
                                    <td><%= link_to  bimester, method: :delete,   data: {   confirm: 'Â¿Estas seguro?' } do %>
                                            <button class="btn btn-danger"><i class="fa fa-trash-o "></i></button>
                                        <% end %>
                                    </td>
                                </tr>
                                <% end %>
                        </tbody>
                    </table>
                    <div class="card-header">
                        <%= link_to 'Nuevo Bimestre', new_bimester_path,class: "btn btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>